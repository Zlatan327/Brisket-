# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/basketball_predictions

# API Keys (if needed)
NBA_API_KEY=your_nba_api_key_here
EUROLEAGUE_API_KEY=your_euroleague_api_key_here

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Model Configuration
MODEL_VERSION=v1.0.0
DNN_MODEL_PATH=./models/dnn_model.h5
XGBOOST_MODEL_PATH=./models/xgboost_model.json

# Prediction Settings
CONFIDENCE_THRESHOLD=0.7
PREDICTION_UPDATE_HOUR=6  # 6 AM ET
PREGAME_UPDATE_HOURS=2    # 2 hours before tip-off

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# Development
DEBUG=True
RELOAD=True
